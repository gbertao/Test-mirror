###
### A domain for further sandboxing privileged apps.
###

typeattribute priv_app_base priv_app_common;

app_domain(priv_app_base)

# Access the network.
net_domain(priv_app_base)
# Access bluetooth.
bluetooth_domain(priv_app_base)

# Allow the allocation and use of ptys
# Used by: https://play.privileged.com/store/apps/details?id=jackpal.androidterm
create_pty(priv_app_base)

neverallow priv_app_base app_data_file:file no_x_file_perms;
