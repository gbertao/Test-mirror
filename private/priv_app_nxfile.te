###
### A domain for further sandboxing privileged apps.
###

typeattribute priv_app_nxfile priv_app_common;

app_domain(priv_app_nxfile)

# Access the network.
net_domain(priv_app_nxfile)
# Access bluetooth.
bluetooth_domain(priv_app_nxfile)

# Allow the allocation and use of ptys
# Used by: https://play.privileged.com/store/apps/details?id=jackpal.androidterm
create_pty(priv_app_nxfile)
